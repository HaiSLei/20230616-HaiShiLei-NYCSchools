<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_large"
    app:cardBackgroundColor="@color/grey"
    app:cardElevation="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/corner_radius_standard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/list_item_high_school_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_high_School_Title"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Liberty high School"/>

        <TextView
            android:id="@+id/list_item_high_school_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_card_view_field"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/list_item_high_school_name_text_view"
            app:layout_constraintStart_toStartOf="@id/list_item_high_school_name_text_view"
            tools:text="456 liberty Ave, Brooklyn New York, 11234"/>

        <TextView
            android:id="@+id/list_item_high_school_phone_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_card_view_field"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/list_item_high_school_address_text_view"
            app:layout_constraintStart_toStartOf="@id/list_item_high_school_name_text_view"
            tools:text="718-456-5675"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>






